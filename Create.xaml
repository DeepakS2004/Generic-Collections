<Page x:Class="Generic_Collections.Create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Generic_Collections"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create">

    <StackPanel>
        <Label Content="Username"></Label>
        <Label x:Name="lblusername" Margin="15,0,0,0" Height="auto"></Label>
        <Label Content="Date"></Label>
        <DatePicker x:Name="dtp"  Width="750"></DatePicker>
        <Label Content="Content"></Label>
        <TextBox x:Name="txtcontent" AcceptsReturn="true" Height="200" Width="750"></TextBox>
        <Button x:Name="btnsave" Content="Save" Margin="15"  Width="750" Click="btnsave_Click"></Button>
    </StackPanel>
</Page>
