<Window x:Class="Generic_Collections.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Generic_Collections"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel >
        <TextBlock Text="Login Form" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="Username :" Margin="15" ></TextBlock>
        <TextBox x:Name="txtname" Margin="15,0,0,0"></TextBox>
        <TextBlock Text="Email" Margin="15"></TextBlock>
        <TextBox x:Name="txtemail" Margin="15,0,0,0"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="btnlogin" Content="Login" Width="100" Margin="15" Click="btnlogin_Click" ></Button>
            <Button x:Name="btnregister" Style="{StaticResource reg}" Content="Register" Width="100" Margin="15" Click="btnregister_Click"></Button>
        </StackPanel>

    </StackPanel>
</Window>
